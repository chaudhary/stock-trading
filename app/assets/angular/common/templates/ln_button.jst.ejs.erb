<div style="position: relative;">
  <div class="ac_ln_button">
    <div class="p_icon" style="position: absolute;width: 34px;height: 34px;text-align: center;">
      <i class="icon-linkedin" style="font-size: 30px;position: relative;top: 7px;"></i>
    </div>
    <div ng-custom-if="ln_opts.text" style="padding-left: 34px;" class="p_text">
      <div style="border-left: 1px solid #fff;padding: 8px;font-size: 13px;font-weight: 700;text-transform: uppercase;text-align: center;">
        {{ln_opts.text}}
      </div>
    </div>
  </div>
  <div style="position: absolute;top: 0px;left: 0px;height: 100%;width: 100%;background: #fff;opacity: 0.7;" ng-custom-if="ln_opts.disabled"></div>
</div>
